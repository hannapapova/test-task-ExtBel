<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="main_title_text_appearance">
        <item name="android:textSize">@dimen/main_title_text_size</item>
        <item name="android:letterSpacing">@dimen/main_title_letter_spacing</item>
        <item name="android:textColor">@color/input_text_color</item>
        <item name="alpha">@dimen/main_title_alpha</item>
    </style>

    <style name="login_with_social_text_appearance">
        <item name="android:textSize">@dimen/secondary_title_text_size</item>
        <item name="android:letterSpacing">@dimen/secondary_title_letter_spacing</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="dont_have_account_text_appearance" parent="login_with_social_text_appearance">
        <item name="android:textSize">@dimen/secondary_title_text_size</item>
        <item name="android:letterSpacing">@dimen/secondary_title_letter_spacing</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="input_layout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/user_input_layout_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/user_input_layout_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/user_input_layout_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/user_input_layout_radius</item>
        <item name="hintEnabled">false</item>
        <item name="boxStrokeColor">@color/black</item>
        <item name="boxStrokeWidth">@dimen/user_input_layout_stroke_width</item>
        <item name="boxStrokeWidthFocused">@dimen/user_input_layout_stroke_width</item>
        <item name="boxStrokeErrorColor">@color/design_default_color_error</item>
        <item name="errorEnabled">true</item>
        <item name="errorTextAppearance">@style/custom_error</item>
    </style>

    <style name="input_layout_password" parent="input_layout">
        <item name="endIconDrawable">@drawable/custom_password_toggle</item>
        <item name="endIconMode">password_toggle</item>
        <item name="endIconTint">@null</item>
        <item name="errorIconDrawable">@null</item>
    </style>

    <style name="input_edit_text_text_appearance">
        <item name="android:textSize">@dimen/user_input_text_size</item>
        <item name="android:textColorHint">@color/input_text_color</item>
        <item name="android:letterSpacing">@dimen/main_title_letter_spacing</item>
        <item name="android:textColor">@color/input_text_color</item>
        <item name="alpha">@dimen/main_title_alpha</item>
        <item name="android:textCursorDrawable">@drawable/edit_text_cursor</item>
    </style>

    <style name="input_title_text_appearance">
        <item name="android:textSize">@dimen/secondary_title_text_size</item>
        <item name="android:letterSpacing">@dimen/user_input_layout_title_letter_spacing</item>
        <item name="android:textColor">@color/input_title_text_color</item>
    </style>

    <style name="custom_error" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/secondary_title_text_size</item>
        <item name="android:textColor">@color/design_default_color_error</item>
    </style>

    <style name="sign_up_main_button">
        <item name="elevation">@dimen/sign_up_main_button_elevation</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:translationZ">@dimen/sign_up_main_button_translationZ</item>
    </style>

    <style name="sign_up_main_button_text_appearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/user_input_text_size</item>
        <item name="android:lineSpacingExtra">0sp</item>
    </style>

    <style name="login_with_social_button">
        <item name="elevation">@dimen/login_with_social_button_elevation</item>
        <item name="android:translationZ">@dimen/login_with_social_button_translationZ</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
</resources>